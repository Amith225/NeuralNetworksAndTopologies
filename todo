all topologies use monkey change to __init__ using __new__

    def __new__(cls, function, __init__=lambda: None, *args, **kwargs):
        cls.function = function
        cls.args = args
        cls.kwargs = kwargs
        __init__()

        return super(Initializer, cls).__new__(cls, *args, **kwargs)

